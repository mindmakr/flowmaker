@model Flowmaker.ViewModels.Components.EditorVm;
<div id="fmEditor-CloseButton">
    <span  onclick="openNav()">&#9776; open</span>
</div>
<div id="fmEditor">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @Model.Environment.ProductTitle
    <vc:login />
</div>
<script>
    function openNav() {
        document.getElementById("fmEditor").style.width = "250px";
        document.getElementById("fmBody").style.marginRight = "250px";
    }

    function closeNav() {
        document.getElementById("fmEditor").style.width = "0";
        document.getElementById("fmBody").style.marginRight = "0";
    }
</script>
